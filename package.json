{
  "name": "honestpharmco",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --d1=honestpharmco-production --local --ip 0.0.0.0 --port 3000",
    "build": "npm run build:css && vite build",
    "build:css": "tailwindcss -i ./src/styles/main.css -o ./public/static/css/tailwind.css --minify",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist --project-name honestpharmco",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:migrate:local": "wrangler d1 migrations apply honestpharmco-production --local",
    "db:seed": "wrangler d1 execute honestpharmco-production --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "hono": "^4.9.4",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "@tailwindcss/cli": "^4.1.12",
    "@testing-library/dom": "^10.4.1",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.34.0",
    "eslint-plugin-import": "^2.32.0",
    "happy-dom": "^18.0.1",
    "postcss": "^8.5.6",
    "sharp-cli": "^5.2.0",
    "tailwindcss": "^3.4.17",
    "vite": "^6.3.5",
    "vitest": "^3.2.4",
    "wrangler": "^4.4.0"
  }
}
